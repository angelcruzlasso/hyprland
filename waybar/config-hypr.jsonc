{
    // -------------------------------------------------------------------------
    // Global configuration
    // -------------------------------------------------------------------------
    "layer": "top",
    "position": "top",
    "margin-top": 7,
    "margin-left": 7,
    "margin-bottom": 0,
    "margin-right": 7,
    "spacing": 0, 
    "mod": "dock",
    "exclusive": true,
    "reload_style_on_change": true,

    "modules-left": [
        "group/taskbar",
        "hyprland/workspaces",
        "hyprland/window"
    ],
    "modules-center": [
        "clock"
    ],
    "modules-right": [
        "group/adds-ons",
        "group/info",
        "custom/logo-backlight",
        "backlight",
        "custom/updates",
        "bluetooth",
        "network",
        "battery",
        "custom/wlogout"
    ],

    //modules configuration
    "include":[
        // modules center
        "~/.config/waybar/modules/modules-center/hyprland-window.json",
        
        // modules left
        "~/.config/waybar/modules/modules-left/group-taskbar.json",
        "~/.config/waybar/modules/modules-left/logo-taskbar.json",
        "~/.config/waybar/modules/modules-left/taskbar.json",
        "~/.config/waybar/modules/modules-left/tray.json",
        "~/.config/waybar/modules/modules-left/workspaces.json",

        // Modules right
        "~/.config/waybar/modules/modules-right/group-adds-ons.json",
        "~/.config/waybar/modules/modules-right/logo-adds-ons.json",
        "~/.config/waybar/modules/modules-right/group-backlight.json",
        "~/.config/waybar/modules/modules-right/logo-backlight.json",
        "~/.config/waybar/modules/modules-right/backlight.json",
        "~/.config/waybar/modules/modules-right/network.json",
        "~/.config/waybar/modules/modules-right/battery.json",
        "~/.config/waybar/modules/modules-right/clock.json",
        "~/.config/waybar/modules/modules-right/gammastep.json",
        "~/.config/waybar/modules/modules-right/screenshot.json",
        "~/.config/waybar/modules/modules-right/pulseaudio.json",
        "~/.config/waybar/modules/modules-right/power-profile-deamon.json",
        "~/.config/waybar/modules/modules-right/memory.json",
        "~/.config/waybar/modules/modules-right/wlogout.json",
        "~/.config/waybar/modules/modules-right/group-info.json",
        "~/.config/waybar/modules/modules-right/custom-updates.json",
        "~/.config/waybar/modules/modules-right/bluetooth.json",
        "~/.config/waybar/modules/modules-right/change-wallpaper.json"
    ]
}